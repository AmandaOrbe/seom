
<div class="lightbox">
  <div class="white-box">
    <div id="bienvenido">
      <p>Bienvenido a e-oncología</p>
    </div>
    <div class="login">
      <form action="http://www.aulaeoncologia.org/login/index.php" method="post" name="form" id="form">
         <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="form-item">
         <p>Correo electrónico</p>
         <p><input class="form-input" type="text" name="username" size="15" /></p>
       </div>
       <div class="form-item">
         <p>Contraseña</p>
         <p><input class="form-input" type="password" name="password" size="15" /></p>
       </div>
       <p><input class="btn-home btn-login" type="submit" name="Submit" value="Login" /></p>
     </form>
     <button class="btn-cancel">Cancelar</button>
   </div>
 </div>
</div>
