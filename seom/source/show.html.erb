    <h5>OBJETIVOS </h5>
    <p><%data.courses[curso].first[1].objetivos.each do |objetivo|%>
     <p><%= objetivo%></p>
     <% end %>%>
    <h5>COMPETENCIAS</h5>
    <ul><%data.courses[curso].first[1].competencias.each do |competencia|%>
    <li> <%= competencia%></li>
     <% end %>
    </ul>
    <br>
    </div>
    <div class="caja reducido">
     <h5>PROGRAMA</h5>
      <ul><%data.courses[curso].first[1].programa.each do |modulo|%>
    <li> <%= modulo%></li>
     <% end %>
    </ul>
    </div>
    <div class="caja reducido">
    <h5>DIRECCIÓN Y PROFESORES</h5>
    <p><b>Profesores</b></p>
       <ul><%data.courses[curso].first[1].profesores.each do |profesor|%>
        <li> <%= profesor%></li>
     <% end %>
    </ul>

    <p><b>Dirección</b></p>
    <ul><%data.courses[curso].first[1].direccion.each do |director|%>
        <li> <%= director%></li>
     <% end %>
    </div>

  </div>
</div>

  <%end%>


